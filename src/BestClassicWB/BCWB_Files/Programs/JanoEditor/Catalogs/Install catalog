; Automatically generated - do not edit!

(set APPNAME JanoEditor)

(set M_WELCOME (cat "Welcome to the installation of JanoEditor v1.01."))

(set WHICH_CATALOG (cat "\nWhich language do you want to install ? (in LOCALE:)\n"))

(set vernum (getversion "locale.library" (resident)))
(set ver (shiftright vernum 16))

;
; Here is the screen where the user's skill is controlled
;

(welcome M_WELCOME)

(if (>= ver 38)
	(
		(set DEF_LANG 0)
		(if (= @language "deutsch") (set DEF_LANG 1))
		(if (= @language "español") (set DEF_LANG 2))
		(if (= @language "français") (set DEF_LANG 4))
		(if (= @language "norsk") (set DEF_LANG 8))
		(if (= @language "polski") (set DEF_LANG 16))
		(if (= @language "russian") (set DEF_LANG 32))
		(set CATALOGS DEF_LANG)
		(set CATALOGS (askoptions (prompt WHICH_CATALOG)
			(help @askoptions-help)
			(choices "Deutsch" "Español" "Français" "Norsk" "Polski" "Russian" )
			(default DEF_LANG)
		))
		(if (BITAND CATALOGS 1)
			((copyfiles (prompt (cat MSG_COPYLANG "deutsch..."))
			           (help @copyfiles-help)
			           (source "deutsch/JanoEditor.catalog")
			           (dest   "LOCALE:Catalogs/deutsch"))
			(copyfiles (prompt (cat MSG_COPYLANG "deutsch..."))
			           (help @copyfiles-help)
			           (source "deutsch/JanoPrefs.catalog")
			           (dest   "LOCALE:Catalogs/deutsch")
			)
		))
		(if (BITAND CATALOGS 2)
			((copyfiles (prompt (cat MSG_COPYLANG "español..."))
			           (help @copyfiles-help)
			           (source "español/JanoEditor.catalog")
			           (dest   "LOCALE:Catalogs/español"))
			(copyfiles (prompt (cat MSG_COPYLANG "español..."))
			           (help @copyfiles-help)
			           (source "español/JanoPrefs.catalog")
			           (dest   "LOCALE:Catalogs/español")
			)
		))
		(if (BITAND CATALOGS 4)
			((copyfiles (prompt (cat MSG_COPYLANG "français..."))
			           (help @copyfiles-help)
			           (source "français/JanoEditor.catalog")
			           (dest   "LOCALE:Catalogs/français"))
			(copyfiles (prompt (cat MSG_COPYLANG "français..."))
			           (help @copyfiles-help)
			           (source "français/JanoPrefs.catalog")
			           (dest   "LOCALE:Catalogs/français")
			)
		))
		(if (BITAND CATALOGS 8)
			((copyfiles (prompt (cat MSG_COPYLANG "norsk..."))
			           (help @copyfiles-help)
			           (source "norsk/JanoEditor.catalog")
			           (dest   "LOCALE:Catalogs/norsk"))
			(copyfiles (prompt (cat MSG_COPYLANG "norsk..."))
			           (help @copyfiles-help)
			           (source "norsk/JanoPrefs.catalog")
			           (dest   "LOCALE:Catalogs/norsk")
			)
		))
		(if (BITAND CATALOGS 16)
			((copyfiles (prompt (cat MSG_COPYLANG "polski..."))
			           (help @copyfiles-help)
			           (source "polski/JanoEditor.catalog")
			           (dest   "LOCALE:Catalogs/polski"))
			(copyfiles (prompt (cat MSG_COPYLANG "polski..."))
			           (help @copyfiles-help)
			           (source "polski/JanoPrefs.catalog")
			           (dest   "LOCALE:Catalogs/polski")
			)
		))
		(if (BITAND CATALOGS 32)
			((copyfiles (prompt (cat MSG_COPYLANG "russian..."))
			           (help @copyfiles-help)
			           (source "russian/JanoEditor.catalog")
			           (dest   "LOCALE:Catalogs/russian"))
			(copyfiles (prompt (cat MSG_COPYLANG "russian..."))
			           (help @copyfiles-help)
			           (source "russian/JanoPrefs.catalog")
			           (dest   "LOCALE:Catalogs/russian")
			)
		))
	)
)
